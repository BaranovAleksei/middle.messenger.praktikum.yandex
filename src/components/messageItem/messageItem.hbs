<div class = 'messageItem {{#if authorI}} right {{/if}}'>
    {{#if img}}
    <div class = 'imgMessageItem'>
        <img src={{img}} alt="img in message">
    </div>
    {{/if}}
    <div class = 'textMessageItem'>
        <p>{{message}}</p>
    </div>
    <div class = 'timeMessageItem'>
        <span>{{timeMessage}}</span>
    </div>
</div>
